[Unit]
Description=erpc service
ConditionPathExists=path_to_erpc_binary
After=network.target

[Service]
Type=simple
Restart=on-failure
RestartSec=10
WorkingDirectory=path_to_erpc_user_home
ExecStart=path_to_erpc_binaryy --config path_to_erpc_Config.toml --env path_to_erpc_env --log_config path_to_erpc_log_config.yml

[Install]
WantedBy=default.target